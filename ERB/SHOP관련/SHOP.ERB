;==================================
;홈화면 관련
;SYSTEM_CALL 이곳이 메인 화면임
;==================================
@SHOW_SHOP

CALL SHOP_STATUS

CALLF SHOW_SHOP_MENU

@SHOW_SHOP_MENU
#FUNCTION
PRINTL - 메인 메뉴 -
SIF TARGET
    PRINTLC [100] 연애
PRINTLC [101] 상태보기
PRINTLC [102] 휴식
IF !FLAG:속박상태
    SIF TIME == 0;낮
        PRINTLC [103] 출격
    PRINTLC [104] 대상변경
    PRINTLC [105] 상점
ENDIF
PRINTLC [106] 요리
IF !FLAG:속박상태
    SIF TIME == 0,;낮
        PRINTLC [107] 헤어진다
    PRINTLC [108] 사령관 이름 변경
ENDIF
PRINTL

PRINTL
IF DAY >= 30 && !FLAG:속박상태
    PRINTFORML - 연장점검 {DAY}일째 -
ELSE
    PRINTL - 서버 점검중 -
ENDIF
SETCOLOR 125, 125, 125
PRINTLC 랭킹 보기
RESETCOLOR
PRINTL

PRINTL
PRINTL - 오프라인 모드 -
PRINTLC [200] SAVE
PRINTLC [300] LOAD
PRINTL


PRINTL
PRINTL - 시스템 콘솔 -
PRINTLC [500] 처음부터
SIF GAMEBASE_VERSION != FLAG:LAST_LAOVERSION
    SETCOLOR 255,0,0
PRINTLC [600] UPDATE
RESETCOLOR
PRINTLC [999] 종료
;==================================
;SYSTEM_CALL @SHOW_SHOP 이후 넘어옴
;==================================
@USERSHOP
SELECTCASE RESULT
    ;연애
    CASE 100
        IF TARGET
            BEGIN TRAIN
            RETURN 1
        ENDIF
    ;상태보기
    CASE 101
        PRINTW 미실장입니다.
    ;휴식
    CASE 102
        PRINTW 미실장입니다.
    ;출격
    CASE 103
        SIF FLAG:속박상태 || TIME == 1
            RETURN 0
        PRINTW 미실장입니다.
    ;대상변경
    CASE 104
        SIF FLAG:속박상태
            RETURN 0
        PRINTW 미실장입니다.
    ;상점
    CASE 105
        SIF FLAG:속박상태
            RETURN 0
        CALL MAIN_SHOP
        RETURN 1
    ;요리
    CASE 106
        PRINTW 미실장입니다.
    ;헤어진다
    CASE 107
        SIF !FLAG:속박상태 && TIME == 0
            RETURN 0
        PRINTW 미실장입니다.
    ;사령관 이름 변경
    CASE 108
        SIF FLAG:속박상태
            RETURN 0
        CALL COMMANDER_NAMESET
        RETURN 1
    ;SAVE
    CASE 200
        CALL SAVEGAME_EX
    ;LOAD
    CASE 300
        CALL LOADGAME_EX
    ;처음부터
    CASE 500
        PRINTL 정말로 처음부터 시작하시겠습니까?
        CALL ASK_YN
        IF RESULT == 0
            CALL NEWGAME
        ENDIF
    ;UPDATE
    CASE 600
        CALL UPDATE
    CASE 999
        PRINTL 게임을 종료합니다.
        PRINTW 엔터 키를 눌러 계속...
        QUIT
    CASEELSE
        PRINTW 제시된 숫자를 입력해주세요.
ENDSELECT
