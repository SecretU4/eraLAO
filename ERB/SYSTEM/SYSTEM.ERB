            SETCOLOR 0, 255, 0
        ENDIF
        PRINTFORMLC [{LOCAL}] %LOCALS, 8%
        RESETCOLOR
    NEXT
ELSE ;MASTER 일때
    FOR LOCAL, 90, 100
        IF TALENTNAME:LOCAL == ""
            CONTINUE
        ELSEIF TALENT:대상:LOCAL != 0
            SETCOLOR 0, 255, 0
        ENDIF
        PRINTFORMLC [{LOCAL}] %TALENTNAME:LOCAL%
        RESETCOLOR
    NEXT
ENDIF
;위 값 초기화
VARSET LOCAL
LOCALS =
LOCALS:1 '= "바꾸지 않는다"
LOCALS:2 '= "값을 지운다"
LOCALS:3 '= "(으)로 한다"
LOCALS:4 '= "(으)로 한다"
;실제 구동부
WHILE 1
    INPUT
    SELECTCASE RESULT
        CASE 0 ;돌아가기
            RETURN 0
        CASE 1 ;호감도
            PRINTFORML %CALLNAME:대상%의 호감도값을 지정해주세요.
            INPUT
            LOCAL = RESULT
            PRINTFORML 호감도 수치를 {RESULT} 로 변경합니까?
            CALL ASK_YN
            SIF RESULT == 0
                CFLAG:대상:호감도 = LOCAL
            BREAK
        CASE 2 ;공포
            PRINTFORML %CALLNAME:대상%의 공포값을 지정해주세요.
            INPUT
            LOCAL = RESULT
            PRINTFORML 공포 수치를 {RESULT} 로 변경합니까?
            CALL ASK_YN
            SIF RESULT == 0
                CFLAG:대상:공포 = LOCAL
            BREAK
        CASE 3 ;스트레스
            PRINTFORML %CALLNAME:대상%의 스트레스값을 지정해주세요.
            INPUT
            LOCAL = RESULT
            PRINTFORML 스트레스 수치를 {RESULT} 로 변경합니까?
            CALL ASK_YN
            SIF RESULT == 0
                CFLAG:대상:스트레스 = LOCAL
            BREAK
        CASE 4 ;CFLAG 수정
            PRINTL 변경하실 CFLAG의 인덱스(CFLAG.CSV 내 숫자값)값을 지정해주세요. 0도 유효한 값으로 입력됩니다.
            INPUT
            IF CFLAGNAME:RESULT == ""
                PRINTL CSV에서 정의되지 않은 인덱스값입니다.
                PRINTW 다시 시도해주세요.
            ELSE
                LOCAL:1 = RESULT
                PRINTFORML %CALLNAME:대상% : %CFLAGNAME:(LOCAL:1)%의 현재 값은 {CFLAG:대상:(LOCAL:1)} 입니다.
                PRINTL 변경할 값을 입력해주세요. 0도 유효한 값으로 입력됩니다.
                INPUT
                LOCAL:2 = RESULT
                PRINTFORML %CALLNAME:대상%의 %CFLAGNAME:(LOCAL:1)% 수치를 {RESULT}로 변경합니까?
                CALL ASK_YN
                SIF RESULT == 0
                    CFLAG:대상:(LOCAL:1) = RESULT
            ENDIF
            BREAK
        CASE 5 ;기초수치 수정
            PRINTL
            DRAWLINE
            PRINTL [0] 돌아가기
            IF 대상 != MASTER
                PRINT [1] 체형변경 - 현재  
                SELECTCASE TALENT:대상:체형
                    CASE 0 ;작은체구
                        PRINTL [작은체구]
                    CASE 1 ;보통체구
                        PRINTL [보통체구]
                    CASE 2 ;큰체구
                        PRINTL [큰체구]
                ENDSELECT
            ELSE
                PRINT [2] 나이변경 - 현재 
                SELECTCASE TALENT:대상:나이
                    CASE 0 ;소년
                        PRINTL [소년]
                    CASE 1 ;청년
                        PRINTL [청년]
                    CASE 2 ;중년
                        PRINTL [중년]
                ENDSELECT
            ENDIF
            WHILE 1
                INPUT
                SELECTCASE RESULT
                    CASE 0 ;돌아가기
                        RETURN 0
                    CASE 1 ;체구변경
                        PRINTL 어떤 체형으로 할까요?
                        CALL ASK_M(LOCALS:1, 1, "작은체구", TALENT:대상:체형 != 0, "보통체구", TALENT:대상:체형 != 1, "큰체구", TALENT:대상:체형 != 2)
                        SELECTCASE RESULT
                            CASE 0
                                RETURN 0
                            CASE 1, 2, 3
                                TALENT:대상:체형 = (RESULT - 1)
                        ENDSELECT
                        BREAK
                    CASE 2 ;나이변경
                        PRINTL 어떤 나이대로 할까요?
                        CALL ASK_M(LOCALS:1, 1, "소년", TALENT:대상:나이 != 0, "청년", TALENT:대상:나이 != 1, "중년", TALENT:대상:나이 != 2)
                        SELECTCASE RESULT
                            CASE 0
                                RETURN 0
                            CASE 1, 2, 3
                                TALENT:대상:나이 = (RESULT - 1)
                        ENDSELECT
                        BREAK
                    CASEELSE
                        PRINTW 주어진 선택지 중에서 선택해주세요.
                        CONTINUE
                ENDSELECT
            WEND
            RETURN 1
        CASE 21 TO 90 ;일반능력
            LOCAL = RESULT
            IF 대상 == MASTER || TALENTNAME:LOCAL == ""
                PRINTW 주어진 선택지 중에서 골라주세요.
                CONTINUE
            ENDIF
            PRINTFORML 선택 능력 : %TALENTNAME:LOCAL%
            PRINT 현재 상태 : 
            ;단순 on/off 아님
            IF GROUPMATCH(LOCAL, 23,30,62,70, 25,26,72)
                SELECTCASE LOCAL
                    ;-1 < 0 > 1 형 TALENT
                    CASE 23,30,62,70
                        STAT_DATA:0 = -1
                        STAT_DATA:1 = 1
                    ;0 > 1 > 2 형 TALENT
                    CASE 25,26,72
                        STAT_DATA:0 = 1
                        STAT_DATA:1 = 2
                ENDSELECT

                ;ASK_M용 선택지 처리
                LOCALS:3 '= TALENTNAME_EX(LOCAL, STAT_DATA:0) + LOCALS:3
                LOCALS:4 '= TALENTNAME_EX(LOCAL, STAT_DATA:1) + LOCALS:4
                IF TALENT:대상:LOCAL
                    PRINTSL TALENTNAME_EX(LOCAL, TALENT:대상:LOCAL)
                ELSE
                    PRINTL [없음]
                ENDIF

                PRINTL 어떻게 변경할까요?
                CALL ASK_M(LOCALS:1, 1, LOCALS:3, TALENT:대상:LOCAL != STAT_DATA:0, LOCALS:4, TALENT:대상:LOCAL != STAT_DATA:1, LOCALS:2, TALENT:대상:LOCAL != 0)
                SELECTCASE RESULT
                    CASE 0 ;현상태 유지
                        CONTINUE
                    CASE 1 ;상단값으로 변경
                        TALENT:대상:LOCAL = STAT_DATA:0
                    CASE 2 ;하단값으로 변경
                        TALENT:대상:LOCAL = STAT_DATA:1
                    CASE 3 ;비활성화
                        TALENT:대상:LOCAL = 0
                ENDSELECT
            ;단순 on/off
            ELSE
                PRINTFORML \@ TALENT:대상:LOCAL ? 활성화 # 비활성화 \@
                PRINTL 현재 값을 변경합니까?
                CALL ASK_YN()
                SIF RESULT == 0
                    TALENT:대상:LOCAL = !TALENT:대상:LOCAL
            ENDIF
            BREAK
        CASE 90 TO 100 ;MASTER용 능력조정
            LOCAL = RESULT
            IF 대상 != MASTER || TALENTNAME:LOCAL == ""
                PRINTW 주어진 선택지 중에서 골라주세요.
                CONTINUE
            ENDIF
            PRINTFORML [%TALENTNAME:LOCAL%]의 현재 상태 : \@ TALENT:대상:LOCAL ? 활성화 # 비활성화 \@
            PRINTL 현재 값을 변경합니까?
            CALL ASK_YN()
            SIF RESULT == 0
                TALENT:대상:LOCAL = !TALENT:대상:LOCAL
            BREAK
        CASEELSE
            PRINTW 주어진 선택지 중에서 골라주세요.
            CONTINUE
    ENDSELECT
WEND
RETURN 1
