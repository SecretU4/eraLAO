@eraLAO_VER()
#FUNCTIONS

LOCALS = {GAMEBASE_VERSION/1000}.{(GAMEBASE_VERSION%1000)/100}{(GAMEBASE_VERSION%100)/10}
SIF GAMEBASE_VERSION % 10
    LOCALS = {GAMEBASE_VERSION/1000}.{(GAMEBASE_VERSION%1000)/100}{(GAMEBASE_VERSION%100)/10}{GAMEBASE_VERSION % 10}

RETURNF LOCALS
;========================================================================
;버전 변경시 추가/초기화 사항 처리
;========================================================================
@VERSION_UP

SIF FLAG:LAST_LAOVERSION == GAMEBASE_VERSION
    RETURN 0

FLAG:LAST_LAOVERSION = GAMEBASE_VERSION
RETURN 1
;=========================================================================
;시작시 디버그
;=========================================================================
@DEBUG
PRINTL 디버그 모드입니다.

;세이브파일의 현 버전 설정
FLAG:LAST_LAOVERSION = GAMEBASE_VERSION

;전역변수 초기화
DAY = 1
MASTER = 0
TARGET = 0
ASSI = 0
MONEY:0 = 100000000

;원룸으로 설정
FLAG:캐릭터보유고 = 2

NAME:MASTER = 아이샤
CALLNAME:MASTER = 아이샤

;게임 시작시 변수 데이터 처리
CALL ADD_ALL_CHARA
CALL UPDATE_STOCK
;그림 유무 처리
FOR LOCAL, 1, CHARANUM
    SELECTCASE NO:LOCAL
        CASE 7, 12, 32, 51, 68, 89, 113, 123, 132, 138
            CFLAG:LOCAL:개별그림유무 = 1
    ENDSELECT
NEXT

;약혼반지는 하나만
CALL SET_EX_ITEM_SALES(1, 1)

CALL SET_EX_ITEM_SALES(50, 60)
CALL SET_ITEM_SALES(2, 50, 20)
CALL SET_EX_ITEM_SALES(200, 203)

PRINTW 디버그 설정이 완료되었습니다.

BEGIN SHOP
;=========================================================================
;개별 디버그
;=========================================================================
@EPC_DEBUG
CLEARLINE LINECOUNT
PRINTL 환영합니다.
PRINTL
WHILE 1
    CALL EPC_MENU
    INPUT
    SELECTCASE RESULT
        CASE 0 ; 돌아가기
            RETURN -1
        CASE 1 ; 캐릭터 설정
            CALL DEBUG_CHARA
            DRAWLINE
        CASE 7 ; 강제 시간변경
            TFLAG:98 = 0
            BEGIN TURNEND
        CASE 8 ; 현재시간 변경
            CALL DEBUG_TIME
            DRAWLINE
        CASE 9 ; 휴식 이벤트 설정
            CALL DEBUG_REST
            DRAWLINE
        CASE 10 ; 엔딩 설정
            CALL DEBUG_ENDING
            DRAWLINE
    ENDSELECT
WEND
;-------------------------------------------------------------------------
@EPC_MENU
FOR LOCAL, 0, 11
    SIF TFLAG:98 && LOCAL == 7
        SETCOLOR 255,0,0
    SELECTCASE LOCAL
        CASE 0
            PRINTFORML [{LOCAL}] 돌아가기
        CASE 1
            PRINTFORML [{LOCAL}] 캐릭터 설정
        CASE 7
            PRINTFORML [{LOCAL}] 강제 시간변경 실행(선택시 시간대/날짜 변경이 바로 이루어집니다. 엔딩 설정 후에는 필히 이용해주세요)
        CASE 8
            PRINTFORML [{LOCAL}] 현재시간 변경
        CASE 9
            PRINTFORML [{LOCAL}] 휴식 이벤트 설정 (휴식 이벤트를 강제 실행합니다)
        CASE 10
            PRINTFORML [{LOCAL}] 엔딩 설정 (엔딩 플래그를 설정합니다)
    ENDSELECT
    RESETCOLOR
NEXT
;-------------------------------------------------------------------------
@DEBUG_TIME
#DIM 현재일자
#DIM 현재시각
#DIM 변경타임, 2
VARSET 변경타임
현재일자 = DAY
현재시각 = TIME
PRINTFORML 현재 {DAY}일차 \@ TIME ? 밤 # 낮 \@ 입니다.
WHILE 1
    PRINTL 몇일차로 변경할까요? (공란/0 입력시 변경없음)
    INPUT
    IF RESULT
        변경타임 = RESULT
    ELSE
        변경타임 = 현재일자
    ENDIF

    PRINTL 어떤 시간대로 이동할까요? (1 = 낮, 2 = 밤, 이외 = 변경없음)
    INPUT
    SELECTCASE RESULT
        CASE 1
            변경타임:1 = 0
        CASE 2
            변경타임:1 = 1
        CASEELSE
            변경타임:1 = 현재시각
    ENDSELECT
    IF 변경타임 == 현재일자 && 변경타임:1 == 현재시각
        PRINTW 현재 값을 유지하겠습니다.
        RETURN 0
    ELSE
        PRINTFORML {변경타임} 일차 \@ 변경타임:1 ? 밤 # 낮 \@ 으로 이동하시겠습니까?
        CALL ASK_YN
        IF RESULT ; 아니오
            PRINTW 다시 설정해주세요.
        ELSE ; 예
            DAY = 변경타임
            TIME = 변경타임:1
            RETURN 1
        ENDIF
    ENDIF
WEND
;-------------------------------------------------------------------------
@DEBUG_CHARA
#DIM 대상
;대상 선택
CALL CURRENT_BIOLIST("DEBUG")
SIF RESULT == -1
    RETURN 0
대상 = RESULT

;변경 가능 목록 표시
PRINTL 변경할 수치/능력을 선택해주세요.
PRINTL 이벤트를 통하지 않기에 수치가 비정상적이라면 오류가 발생할 수 있습니다.
PRINTL
DRAWLINE
PRINTL [0] 돌아가기
IF 대상 != MASTER
    PRINTFORMLC [1] 호감도 (현재 {CFLAG:대상:호감도})
    PRINTFORMLC [2] 공포 (현재 {CFLAG:대상:공포})
    PRINTFORMLC [3] 스트레스 (현재 {CFLAG:대상:스트레스})
ENDIF
PRINTFORMLC [4] CFLAG 수정
PRINTFORMLC [5] 기초수치 수정
PRINTL
DRAWLINE
IF 대상 != MASTER
    FOR LOCAL, 21, 90
    LOCALS =
        IF TALENTNAME:LOCAL == ""
            CONTINUE
        ELSEIF GROUPMATCH(LOCAL, 30,62,70,72)
            SELECTCASE LOCAL
                CASE 30
                    IF TALENT:대상:LOCAL == -1
                        LOCALS '= "[동생]"
                    ELSEIF TALENT:대상:LOCAL == 1
                        LOCALS '= "[누님]"
                    ELSE
                        LOCALS = [동생]/[누님]
                    ENDIF
                CASE 62
                    IF TALENT:대상:LOCAL == -1
                        LOCALS += "[비관적]"
                    ELSEIF TALENT:대상:LOCAL == 1
                        LOCALS += "[긍정적]"
                    ELSE
                        LOCALS = [비관적]/[긍정적]
                    ENDIF
                CASE 70
                    IF TALENT:대상:LOCAL == -1
                        LOCALS += "[무식]"
                    ELSEIF TALENT:대상:LOCAL == 1
                        LOCALS += "[지식]"
                    ELSE
                        LOCALS = [무식]/[지식]
                    ENDIF
                CASE 72
                    IF TALENT:대상:LOCAL == 1
                        LOCALS += "[정신쇠약]"
                    ELSEIF TALENT:대상:LOCAL == 2
                        LOCALS += "[정신붕괴]"
                    ELSE
                        LOCALS = [정신쇠약]/[정신붕괴]
                    ENDIF
            ENDSELECT
        ELSE
            LOCALS += @"[%TALENTNAME:LOCAL%]"
        ENDIF
        SIF TALENT:대상:LOCAL != 0
            SETCOLOR 0, 255, 0
        PRINTFORMLC [{LOCAL}] %LOCALS, 8%
        RESETCOLOR
    NEXT
ELSE ;MASTER 일때
    FOR LOCAL, 90, 100
        SIF TALENTNAME:LOCAL == ""
            CONTINUE
        SIF TALENT:대상:LOCAL != 0
            SETCOLOR 0, 255, 0
        PRINTFORMLC [{LOCAL}] %TALENTNAME:LOCAL%
        RESETCOLOR
    NEXT
ENDIF
;위 값 초기화
VARSET LOCAL
LOCALS =
LOCALS:1 '= "바꾸지 않는다"
LOCALS:2 =
LOCALS:3 =
LOCALS:4 '= "값을 지운다"
;실제 구동부
WHILE 1
    INPUT
    SELECTCASE RESULT
        CASE 0 ;돌아가기
            RETURN 0
        CASE 1 ;호감도
            PRINTFORML %CALLNAME:대상%의 호감도값을 지정해주세요.
            INPUT
            LOCAL = RESULT
            PRINTFORML 호감도 수치를 {RESULT} 로 변경합니까?
            CALL ASK_YN
            SIF RESULT == 0
                CFLAG:대상:호감도 = LOCAL
            BREAK
        CASE 2 ;공포
            PRINTFORML %CALLNAME:대상%의 공포값을 지정해주세요.
            INPUT
            LOCAL = RESULT
            PRINTFORML 공포 수치를 {RESULT} 로 변경합니까?
            CALL ASK_YN
            SIF RESULT == 0
                CFLAG:대상:공포 = LOCAL
            BREAK
        CASE 3 ;스트레스
            PRINTFORML %CALLNAME:대상%의 스트레스값을 지정해주세요.
            INPUT
            LOCAL = RESULT
            PRINTFORML 스트레스 수치를 {RESULT} 로 변경합니까?
            CALL ASK_YN
            SIF RESULT == 0
                CFLAG:대상:스트레스 = LOCAL
            BREAK
        CASE 4 ;CFLAG 수정
            PRINTL 변경하실 CFLAG의 인덱스(CFLAG.CSV 내 숫자값)값을 지정해주세요. 0도 유효한 값으로 입력됩니다.
            INPUT
            IF CFLAGNAME:RESULT == ""
                PRINTL CSV에서 정의되지 않은 인덱스값입니다.
                PRINTW 다시 시도해주세요.
            ELSE
                LOCAL:1 = RESULT
                PRINTFORML %CALLNAME:대상% : %CFLAGNAME:(LOCAL:1)%의 현재 값은 {CFLAG:대상:(LOCAL:1)} 입니다.
                PRINTL 변경할 값을 입력해주세요. 0도 유효한 값으로 입력됩니다.
                INPUT
                LOCAL:2 = RESULT
                PRINTFORML %CALLNAME:대상%의 %CFLAGNAME:(LOCAL:1)% 수치를 {RESULT}로 변경합니까?
                CALL ASK_YN
                SIF RESULT == 0
                    CFLAG:대상:(LOCAL:1) = RESULT
            ENDIF
            BREAK
        CASE 5 ;기초수치 수정
            PRINTL
            DRAWLINE
            PRINTL [0] 돌아가기
            IF 대상 != MASTER
                PRINT [1] 체형변경 - 현재  
                SELECTCASE TALENT:대상:체형
                    CASE 0 ;작은체구
                        PRINTL [작은체구]
                    CASE 1 ;보통체구
                        PRINTL [보통체구]
                    CASE 2 ;큰체구
                        PRINTL [큰체구]
                ENDSELECT
            ELSE
                PRINT [2] 나이변경 - 현재 
                SELECTCASE TALENT:대상:나이
                    CASE 0 ;소년
                        PRINTL [소년]
                    CASE 1 ;청년
                        PRINTL [청년]
                    CASE 2 ;중년
                        PRINTL [중년]
                ENDSELECT
            ENDIF
            WHILE 1
                INPUT
                SELECTCASE RESULT
                    CASE 0 ;돌아가기
                        RETURN 0
                    CASE 1 ;체구변경
                        PRINTL 어떤 체형으로 할까요?
                        CALL ASK_M(LOCALS:1, 1, "작은체구", TALENT:대상:체형 != 0, "보통체구", TALENT:대상:체형 != 1, "큰체구", TALENT:대상:체형 != 2)
                        SELECTCASE RESULT
                            CASE 0
                                RETURN 0
                            CASE 1, 2, 3
                                TALENT:대상:체형 = (RESULT - 1)
                        ENDSELECT
                        BREAK
                    CASE 2 ;나이변경
                        PRINTL 어떤 나이대로 할까요?
                        CALL ASK_M(LOCALS:1, 1, "소년", TALENT:대상:나이 != 0, "청년", TALENT:대상:나이 != 1, "중년", TALENT:대상:나이 != 2)
                        SELECTCASE RESULT
                            CASE 0
                                RETURN 0
                            CASE 1, 2, 3
                                TALENT:대상:나이 = (RESULT - 1)
                        ENDSELECT
                        BREAK
                    CASEELSE
                        PRINTW 주어진 선택지 중에서 선택해주세요.
                        CONTINUE
                ENDSELECT
            WEND
            RETURN 1
        CASE 21 TO 90 ;일반능력
            LOCAL = RESULT
            IF 대상 == MASTER || TALENTNAME:LOCAL == ""
                PRINTW 주어진 선택지 중에서 골라주세요.
                CONTINUE
            ENDIF
            PRINTFORML 선택 능력 : %TALENTNAME:LOCAL%
            PRINT 현재 상태 : 
            ;단순 on/off 아님
            ;-1 < 0 > 1 형 TALENT
            IF GROUPMATCH(LOCAL, 30,62,70)
                ;ASK_M용 선택지 처리
                LOCALS:2 '= "(으)로 한다"
                LOCALS:3 '= "(으)로 한다"
                SELECTCASE LOCAL
                    CASE 30 ;나이속성
                        LOCALS:2 '= "[동생]" + LOCALS:2
                        LOCALS:3 '= "[누님]" + LOCALS:3
                        IF TALENT:대상:LOCAL == -1
                            PRINTL [동생]
                        ELSEIF TALENT:대상:LOCAL == 1
                            PRINTL [누님]
                        ELSE
                            PRINTL 없음
                        ENDIF
                    CASE 62 ;긍정도
                        LOCALS:2 '= "[비관적]" + LOCALS:2
                        LOCALS:3 '= "[긍정적]" + LOCALS:3
                        IF TALENT:대상:LOCAL == -1
                            PRINTL [비관적]
                        ELSEIF TALENT:대상:LOCAL == 1
                            PRINTL [긍정적]
                        ELSE
                            PRINTL 없음
                        ENDIF
                    CASE 70 ;지능
                        LOCALS:2 '= "[무식]" + LOCALS:2
                        LOCALS:3 '= "[지식]" + LOCALS:3
                        IF TALENT:대상:LOCAL == -1
                            PRINTL [무식]
                        ELSEIF TALENT:대상:LOCAL == 1
                            PRINTL [지식]
                        ELSE
                            PRINTL 없음
                        ENDIF
                ENDSELECT
                PRINTL 어떻게 변경할까요?
                CALL ASK_M(LOCALS:1, 1, LOCALS:2, TALENT:대상:LOCAL != -1, LOCALS:3, TALENT:대상:LOCAL != 1, LOCALS:4, TALENT:대상:LOCAL != 0)
                SELECTCASE RESULT
                    CASE 0 ;현상태 유지
                        CONTINUE
                    CASE 1 ;상단값으로 변경
                        TALENT:대상:LOCAL = -1
                    CASE 2 ;하단값으로 변경
                        TALENT:대상:LOCAL = 1
                    CASE 3 ;비활성화
                        TALENT:대상:LOCAL = 0
                ENDSELECT
            ;0 > 1 > 2 형 TALENT
            ELSEIF GROUPMATCH(LOCAL, 25,26,72)
                ;ASK_M용 선택지 처리
                LOCALS:2 '= "(으)로 한다"
                LOCALS:3 '= "(으)로 한다"
                SELECTCASE LOCAL
                    CASE 25 ;사랑
                        LOCALS:2 '= "[연모]" + LOCALS:2
                        LOCALS:3 '= "[사랑]" + LOCALS:3
                        IF TALENT:대상:LOCAL == 1
                            PRINTL [연모]
                        ELSEIF TALENT:대상:LOCAL == 2
                            PRINTL [사랑]
                        ELSE
                            PRINTL 없음
                        ENDIF
                    CASE 26 ;혼인                  
                        LOCALS:2 '= "[혼인]" + LOCALS:2
                        LOCALS:3 '= "[입양]" + LOCALS:3
                        IF TALENT:대상:LOCAL == 1
                            PRINTL [혼인]
                        ELSEIF TALENT:대상:LOCAL == 2
                            PRINTL [입양]
                        ELSE
                            PRINTL 없음
                        ENDIF
                    CASE 72 ;정신쇠약
                        LOCALS:2 '= "[정신쇠약]" + LOCALS:2
                        LOCALS:3 '= "[정신붕괴]" + LOCALS:3
                        IF TALENT:대상:LOCAL == 1
                            PRINTL [정신쇠약]
                        ELSEIF TALENT:대상:LOCAL == 2
                            PRINTL [정신붕괴]
                        ELSE
                            PRINTL 없음
                        ENDIF
                ENDSELECT
                PRINTL 어떻게 변경할까요?
                CALL ASK_M(LOCALS:1, 1, LOCALS:2, TALENT:대상:LOCAL != 1, LOCALS:3, TALENT:대상:LOCAL != 2, LOCALS:4, TALENT:대상:LOCAL != 0)
                SELECTCASE RESULT
                    CASE 0 ;현상태 유지
                        CONTINUE
                    CASE 1 ;상단값으로 변경
                        TALENT:대상:LOCAL = 1
                    CASE 2 ;하단값으로 변경
                        TALENT:대상:LOCAL = 2
                    CASE 3 ;비활성화
                        TALENT:대상:LOCAL = 0
                ENDSELECT
            ELSE
                PRINTFORML \@ TALENT:대상:LOCAL ? 활성화 # 비활성화 \@
                PRINTL 현재 값을 변경합니까?
                CALL ASK_YN()
                SIF RESULT == 0
                    TALENT:대상:LOCAL = !TALENT:대상:LOCAL
            ENDIF
            BREAK
        CASE 90 TO 100 ;MASTER용 능력조정
            LOCAL = RESULT
            IF 대상 != MASTER || TALENTNAME:LOCAL == ""
                PRINTW 주어진 선택지 중에서 골라주세요.
                CONTINUE
            ENDIF
            PRINTFORML [%TALENTNAME:LOCAL%]의 현재 상태 : \@ TALENT:대상:LOCAL ? 활성화 # 비활성화 \@
            PRINTL 현재 값을 변경합니까?
            CALL ASK_YN()
            SIF RESULT == 0
                TALENT:대상:LOCAL = !TALENT:대상:LOCAL
            BREAK
        CASEELSE
            PRINTW 주어진 선택지 중에서 골라주세요.
            CONTINUE
    ENDSELECT
WEND
RETURN 1
