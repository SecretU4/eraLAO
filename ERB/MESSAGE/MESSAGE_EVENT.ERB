;날짜변경시 개별 메시지
;TARGET(대상) 이 있어야 출력
;-------------------------------------------------
@MSG_Morning

;대상 없이 밤 > 낮시 에러상황 방지
SIF TARGET == 0
    RETURN 0
CSTR:1 = 

CALL SET_MSG_CSTR(TARGET)
SELECTCASE NO:TARGET
    CASE 68
        IF TALENT:정신쇠약 == 1 && TALENT:사랑 == 2
            CSTR:1 = Weak2
        ELSEIF CFLAG:공포 > 199 && TALENT:사랑 == 2
            CSTR:1 = Fear2
        ELSEIF TALENT:혼인 == 1 || TALENT:사랑 == 2
            CSTR:1 = Love
        ELSEIF TALENT:짜증 && TALENT:사랑 == 2
            CSTR:1 = Annoyed2
        ENDIF
ENDSELECT

SIF FLAG:속박상태
    CSTR:1 = Hidden

REPEAT 10
    TRYCALLFORM M_No{NO:TARGET}_EVENT_Morning
    IF RESULT == 0
        CSTR:1 '= Alternative_CSTR(TARGET)
        SIF COUNT == 9
            DEBUGPRINTFORML 조건(%CSTR:1%)에 맞는 %CALLNAME:TARGET%의 아침 지문이 발견되지 않음
    ELSE
        BREAK
    ENDIF
REND

RETURN 1
